@model List < AutoRSN.Models.Shipset >
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- -------------- Topbar -------------- -->
<header id="topbar" class="alt">

    <div class="topbar-left">
        <ol class="breadcrumb">
            <li class="breadcrumb-icon">
                <a href="#">
                    <span class="fa fa-home"></span>
                </a>
            </li>
            <li class="breadcrumb-active">
                <a href="#">Master Setup</a>
            </li>
            <li class="breadcrumb-link">
                <a href="#">HOME</a>
            </li>
            <li class="breadcrumb-current-item">SHIPSET</li>
        </ol>
    </div>
    <div class="topbar-right">
        <div class="ml15 ib va-m" id="sidebar_right_toggle">
            <div class="navbar-btn btn-group btn-group-number mv0">
                <button class="btn btn-sm btn-default btn-bordered prn pln">
                    <i class="fa fa-search fs22 text-default w"></i>
                </button>
            </div>
        </div>
    </div>
</header>
<section id="content" class="table-layout animated fadeIn">
    <form role="form" action="" method="post">
        <!-- -------------- Menu Block -------------- -->
        <hr class="short">
        <div class="allcp-form theme-primary">
            <h5 class="pln"> &nbsp;Filter Shipset</h5>

            <fieldset>
                <div class="section">

                    <div class="col-xs-2">
                        <input type="text" name="cls_pn" id="cls_pn" class="form-control" size="5" width="5" placeholder="Enter Celestica P/N #">
                    </div>
                    &nbsp;
                    <button type="submit" class="btn btn-dark ph30">Search</button>
                </div>
               
            </fieldset>
            <hr class="short">
        </div>
    </form>
</section>

    <!-- -------------- Content -------------- -->
    <section id="content" class="table-layout animated fadeIn">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script>

            function deleteTask(custPn, clsPn) {

                var answer = confirm("Do u want to delete this shipset?");
                if (answer) {

                    var data = new FormData();
                    data.append('custPn', custPn);
                    data.append('clsPn', clsPn);


                    var ajax = new XMLHttpRequest();
                    ajax.open("POST", "/ShipsetHandler.ashx");
                    ajax.send(data);
                    $('#content').load('/Shipset/Index');

                }
                else {
                    //some code
                }

            }

        </script>
        <!-- -------------- Column Center -------------- -->

@try
{
    if (Session["Level"].ToString().Equals("1"))
    {

    }
        <div class="chute chute-center">
            @{
