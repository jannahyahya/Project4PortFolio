                                                            }

                                                        }

                                                        <input class="btn btn-sm btn-default" type="button" onclick="deleteTask('@item.CUST_PN','@item.CLS_PN')" value="Delete" />

                                                    </td>
                                                </tr>
                                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                                                            }

            }

        </div>
               }
                 catch (Exception ex)
                   {
                                 <script type="text/javascript">
                                alert('@ex.Message.Replace("'","\\'").Replace("\r\n","<br/>")' + '\n' + 'Session Timeout');
