                                                            }
                                                            else if (Convert.ToInt32(Session["UserLevel"]) == 1)
                                                            {
                                                                //@Html.ActionLink(" ", "EDIT", new { USERNAME = item.USERNAME, FULLNAME = item.FULLNAME }, new { @class = "btn btn-sm btn-default btn-bordered prn pln fa fa-edit fs22 text-default w50" }) <span>|</span>
