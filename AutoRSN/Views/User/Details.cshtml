@model AutoRSN.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- -------------- Topbar -------------- -->
<header id="topbar" class="alt">
    <div class="topbar-left">
        <ol class="breadcrumb">
            <li class="breadcrumb-icon">
                <a href="#">
                    <span class="fa fa-home"></span>
                </a>
            </li>
            <li class="breadcrumb-active">
                <a href="#">Master Setup</a>
            </li>
            <li class="breadcrumb-link">
                <a href="#">HOME</a>
            </li>
            <li class="breadcrumb-current-item">USER DETAILS</li>
        </ol>
    </div>
    <div class="topbar-right">
        <div class="ib topbar-dropdown">
        </div>
    </div>
</header>

<!-- -------------- Content -------------- -->
<section id="content" class="table-layout animated fadeIn">
    <div class="pl15 pr50">
        <form class="form-horizontal" role="form">
            
            
            <div class="form-group">
                <label class="col-lg-3 control-label">USER NAME:</label>
                <div class="col-lg-8">
                    <p class="form-control-static">@Html.DisplayFor(model => model.USERNAME)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">LEVEL :</label>
                <div class="col-lg-8">
                    <p class="form-control-static">@Html.DisplayFor(model => model.LVL)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">DEPARTMENT :</label>
                <div class="col-lg-8">
                    <p class="form-control-static">@Html.DisplayFor(model => model.DEPT)</p>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">Signature :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"><img src="@Model.SIGNATURE" /></p>
                </div>
            </div>


           
          <div class="form-group">
                <label class="col-lg-3 control-label">STATUS :</label>
                <div class="col-lg-8">
                    <p class="form-control-static">@(Model.STATUS.ToString() == "Y" ? "ACTIVE" : "INACTIVE")</p>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label"></label>
                <div class="col-lg-8">
                    <p class="form-control-static text-muted"></p>
                </div>
            </div>
            
            
           
            <div class="form-group">
                <label class="col-lg-3 control-label"></label>
                <div class="col-lg-8">
                    @Html.ActionLink("Edit", "Edit", new { UserName = Model.USERNAME, FullName = Model.FULLNAME,  }, new { @class = "btn btn-bordered btn-success w150" })
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-bordered btn-dark w150" })
                </div>
            </div>
        </form>
    </div>
    <!-- -------------- /Column Center -------------- -->
</section>
