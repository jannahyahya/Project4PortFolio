@*@model AutoRSN.Models.Account*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <!-- -------------- Meta and Title -------------- -->
    <meta charset="utf-8">
    <title>Login - AutoRSN</title>
    <meta name="keywords" content="AutoRSN - Auto sending required shipment notice system" />
    <meta name="description" content="AutoRSN - Auto sending required shipment notice system">
    <meta name="author" content="CosMo NG SHI CHUAN">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    

 
    <!-- -------------- Fonts -------------- -->
    <link rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700'>
    <link href='https://fonts.googleapis.com/css?family=Lato:400,300,300italic,400italic,700,700italic' rel='stylesheet'
          type='text/css'>


    <!-- -------------- CSS - theme -------------- -->
    <link rel="stylesheet" type="text/css" href="~/assets/skin/default_skin/css/theme.css">

    <!-- -------------- CSS - allcp forms -------------- -->
    <link rel="stylesheet" type="text/css" href="~/assets/allcp/forms/css/forms.css">

    <!-- -------------- Favicon -------------- -->
    <link rel="shortcut icon" href="~/favicon.ico">

    <!-- -------------- IE8 HTML5 support  -------------- -->
    <!--[if lt IE 9]>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body class="utility-page sb-l-c sb-r-c"  >
    <!-- -------------- Body W  rap  -------------- -->
    <div id="main" class="animated fadeIn">
        <!-- -------------- Main Wrapper -------------- -->
        <section id="content_wrapper">
            <!-- -------------- Content -------------- -->
            <section id="content">
                <!-- -------------- Login Form -------------- -->
                <div class="allcp-form theme-primary mw600" id="login">
                    <div class="text-center mb20">
                        <!-- ---------<img src="~/assets/img/logo_login_form.png" class="img-responsive" alt="Logo" />-------- --> 
                    </div>
                    <div class="panel mw600">
                        @using (Html.BeginForm("login", "Account", FormMethod.Post))
                        {
                         
                            @Html.AntiForgeryToken()
                            <div class="alert alert-danger dark alert-dismissable" style="display:@(this.ViewData.ModelState.IsValid ? "none" : "")">
                                @Html.ValidationSummary() 

                                @{
                                    if (@Html.ValidationSummary().ToString().Contains("Logon failure:"))
                                    {

                                       // @Html.ActionLink(" Close Session ", "CloseSession", new { windowsid= Model.USERNAME }, new { target = "_blank", @class = "btn btn-sm btn-default btn-bordered prn pln fa fs17 text-default w30" })
                                    }

                                }
                            </div>
                           
                            <div class="panel-body pn mv10">
                                <!-- 
                                <div class="section">
                                    <label class="field select">
                                       
                                        <i class="arrow"></i>
                                    </label>
                                </div>
                                    -->

                                <div class="section">
                                    <label for="username" class="field prepend-icon">
                                        @*@Html.TextBoxFor(model => model.USERNAME, new { @class = "gui-input",@id="in1", @autocomplete = "off", @placeholder = "Username...", @maxlength = "100" })*@
                                        @Html.TextBox("username",null, new { @class = "gui-input", @placeholder = "Username." })
                                    </label>
                                </div>
                                <!-- -------------- /section -------------- -->
                                <div class="section">
                                    <label for="password" class="field prepend-icon">
                                        @*@Html.PasswordFor(model => model.PASSWORD, new { @class = "gui-input", @id = "in2", @autocomplete = "off", @placeholder = "Password...", @maxlength = "100" })*@
                                        @Html.TextBox("password", null, new { @class = "gui-input" , @type = "password", @placeholder = "Password." })
                                    </label>
                                </div>
                                <!-- -------------- /section -------------- -->
                                <div class="section">
                                    <div class="bs-component pull-left pt5">
                                    </div>
                                    <button type="submit" class="btn btn-bordered btn-dark pull-right">Log in</button>
                                    @*<input type="submit" value="Log in" class="btn btn-bordered btn-dark pull-right" id="submitbtn" />*@
                                    <div class="error">@ViewBag.Error</div>
                                </div>
                                    <!-- -------------- /section -------------- -->
                                </div>
                            <!-- -------------- /Form -------------- -->
                        }
                        <div class="text-center mb20">
                            <span style="color:red;"></span> 
                        </div>
                        <div class="text-center mb50">
                           <span style="font-size:12px;">This system is owned by Celestica and contains confidential and propriety information.
                            Unauthorized access is not permitted and will be reported to law enforcement authorities and subject to civil action.
                            If you are not authorized to access this system, disconnect now.</span> 
                        </div>
                    </div>
                    <!-- -------------- /Panel -------------- -->
                </div>
                <!-- -------------- /Spec Form -------------- -->
            </section>
            <!-- -------------- /Content -------------- -->
        </section>
        <!-- -------------- /Main Wrapper -------------- -->
    </div>
    <!-- -------------- /Body Wrap  -------------- -->
    <!-- -------------- Scripts -------------- -->
    <!-- -------------- jQuery -------------- -->
    <script src="~/assets/js/jquery/jquery-1.11.3.min.js"></script>
    <script src="~/assets/js/jquery/jquery_ui/jquery-ui.min.js"></script>
    <!-- -------------- CanvasBG JS -------------- -->
    <script src="~/assets/js/plugins/canvasbg/canvasbg.js"></script>
    <!-- -------------- Theme Scripts -------------- -->
    <script src="~/assets/js/utility/utility.js"></script>
    <script src="~/assets/js/demo/demo.js"></script>
    <script src="~/assets/js/main.js"></script>
    <!-- -------------- Page JS -------------- -->
    <script type="text/javascript">
    jQuery(document).ready(function () {
        "use strict";
        // Init Theme Core
        Core.init();
        // Init Demo JS
        //Demo.init();
        // Init CanvasBG
        CanvasBG.init({
            Loc: {
                x: window.innerWidth / 5,
                y: window.innerHeight / 10
            }
        });
    });
    </script>
    <!-- -------------- /Scripts -------------- -->
</body>
</html>

