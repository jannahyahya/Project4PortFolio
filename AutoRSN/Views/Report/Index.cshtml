    @model AutoRSN.Models.Report

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- -------------- Topbar -------------- -->
<header id="topbar" class="alt">
    <div class="topbar-left">
        <ol class="breadcrumb">
            <li class="breadcrumb-icon">
                <a href="#">
                    <span class="fa fa-home"></span>
                </a>
            </li>
            <li class="breadcrumb-active">
                <a href="#">Home</a>
            </li>
            <li class="breadcrumb-link">
                <a href="#">HOME</a>
            </li>
            <li class="breadcrumb-current-item">DOWNLOAD SUMMARY</li>
        </ol>
    </div>
    <div class="topbar-right">
        <div class="ib topbar-dropdown">

        </div>
    </div>
</header>

<!-- -------------- Content -------------- -->
<section id="content" class="table-layout animated fadeIn">
    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/black-tie/jquery-ui.css" type="text/css" rel="stylesheet" />
    <script src="~/Assets/js/jquery/jquery-1.11.3.min.js"></script>
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script>
        $(function () { // will trigger when the document is ready

            $('.genDateFrom').datepicker(); //Initialise any date 
            $('.genDateTo').datepicker(); //Initialise any date pickers

            $('.shipDateFrom').datepicker(); //Initialise any date 
            $('.shipDateTo').datepicker(); //Initialise any date pickers
        });

    </script>

    @try
    {
        <div class="pl15 pr50">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-danger" style="float: none;" role="alert">
                    <b>@TempData["Message"]</b>
                </div>
            }
            @using (Html.BeginForm("Index", "Report", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()


  

                <div class="alert alert-danger dark alert-dismissable" style="display:@(this.ViewData.ModelState.IsValid ? "none" : "")">
                    @Html.ValidationSummary()
                </div>


                <div class="form-group">
                    <label class="col-lg-3 control-label">Select Customer Group :</label>
                    <div class="col-lg-8">
                        <p class="form-control-static">
                           @{ 
                               List<SelectListItem> listItem = new List<SelectListItem>();
                               List<AutoRSN.Models.CustomerGroup> customergroup = new AutoRSN.Repositories.CustomerRepository().getCustomerGroupList();
                               foreach(AutoRSN.Models.CustomerGroup customer in customergroup)
                               {

                                   listItem.Add(new SelectListItem
                                   {
                                       Text = customer.CUSTOMERNAME,
                                       Value = customer.CUSTOMERNAME
                                   });

                               }



                           }
                            @Html.DropDownList("groupName", listItem, "Select Customer Group")
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">RSN Generated On (MM/dd/yyyy) :</label>
                    <div class="col-lg-2">
                        <p class="form-control-static">
                            <span>From : </span>  @Html.TextBox("genDateFrom", @DateTime.Now.ToString("MM/dd/yyyy"), new { @class = "form-control genDateFrom", placeholder = DateTime.Now.ToString("MM/dd/yyyy") }) &nbsp; &nbsp;
                            <span>To : </span>  @Html.TextBox("genDateTo", @DateTime.Now.ToString("MM/dd/yyyy"), new { @class = "form-control genDateTo", placeholder = DateTime.Now.ToString("MM/dd/yyyy") })
                             @*@Html.ValidationMessageFor(model => model.EDATU)*@
                        </p>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-lg-3 control-label">RSN Ship Date on (MM/dd/yyyy) :</label>
                    <div class="col-lg-2">
                        <p class="form-control-static">
                            <span>From : </span>  @Html.TextBox("shipDateFrom", @DateTime.Now.ToString("MM/dd/yyyy"), new { @class = "form-control shipDateFrom", placeholder = DateTime.Now.ToString("MM/dd/yyyy") }) &nbsp; &nbsp;
                            <span>To : </span>  @Html.TextBox("shipDateTo", @DateTime.Now.ToString("MM/dd/yyyy"), new { @class = "form-control shipDateTo", placeholder = DateTime.Now.ToString("MM/dd/yyyy") })
                            @*@Html.ValidationMessageFor(model => model.EDATU)*@
                        </p>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-lg-3 control-label">Download by RSN :</label>
                    <div class="col-lg-8">
                        <p class="form-control-static">
                            @Html.RadioButton("report_option","generatedon",true) <span>Generated on</span> &nbsp; &nbsp; &nbsp; &nbsp;
                            @Html.RadioButton("report_option", "shipon") <span>Ship Date on</span>
                            @*@Html.ValidationMessageFor(model => model.EDATU)*@
                        </p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label"></label>
                    <div class="col-lg-8">
                        <input type="submit" class="btn btn-bordered btn-success w150" value="Download" />
                        @*@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-bordered btn-dark w150" })*@
                    </div>
                </div>

                            }
        </div>
                            }
                            catch (Exception ex)
                            {
                                <script type="text/javascript">
                                alert('@ex.Message.Replace("'","\\'").Replace("\r\n","<br/>")' + '\n' + 'Session Timeout');
                                location.href = '/AutoRSN';
                                //alert('Session Timeout');
                                </script>
                            }
    <!-- -------------- /Column Center -------------- -->
</section>
