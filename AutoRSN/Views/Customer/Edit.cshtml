@model AutoRSN.Models.Customer


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- -------------- Topbar -------------- -->
<header id="topbar" class="alt">
    <div class="topbar-left">
        <ol class="breadcrumb">
            <li class="breadcrumb-icon">
                <a href="#">
                    <span class="fa fa-home"></span>
                </a>
            </li>
            <li class="breadcrumb-active">
                <a href="#">Master Setup</a>
            </li>
            <li class="breadcrumb-link">
                <a href="#">HOME</a>
            </li>
            <li class="breadcrumb-current-item">CUSTOMER EDIT</li>
        </ol>
    </div>
    <div class="topbar-right">
        <div class="ib topbar-dropdown">

        </div>
    </div>
</header>

<!-- -------------- Content -------------- -->
<section id="content" class="table-layout animated fadeIn">
    @try
    {


        if (Session["Level"].ToString().Equals("1"))
        {

        }

    <div class="pl15 pr50">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger" style="float: none;" role="alert">
                <b>@TempData["Message"]</b>
            </div>
        }
        @using (Html.BeginForm("Edit", "Customer", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.CUSTOMERCODE)
            @Html.HiddenFor(model => model.MATERIALGROUP)
            @Html.HiddenFor(model => model.SERVERID)

            <div class="alert alert-danger dark alert-dismissable" style="display:@(this.ViewData.ModelState.IsValid ? "none" : "")">
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">CUSTOMER PO CODE :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.TextBoxFor(model => model.CUSTOMERCODE, new { @class = "form-control", @readonly = "readonly" })</p>
                </div>
                <label class="col-lg-3 control-label">SALES ORDER CODE :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.TextBoxFor(model => model.MATERIALGROUP, new { @class = "form-control", @readonly = "readonly" })</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">CUSTOMER NAME :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.TextBoxFor(model => model.CUSTOMERNAME, new { @class = "form-control", @readonly = "readonly" })</p>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">CUSTOMER GROUP OF:</label>
                <div class="col-lg-8">
                    @{

                        List<SelectListItem> listCust = new List<SelectListItem>();
                        AutoRSN.Repositories.CustomerRepository cr = new AutoRSN.Repositories.CustomerRepository();
                        List<AutoRSN.Models.CustomerGroup> temp = cr.getCustomerGroupList();
                        foreach (AutoRSN.Models.CustomerGroup custGroup in temp)
                        {
                            if (Model.CUSTOMERGROUP.Equals(custGroup.CUSTOMERNAME))
                            {
                                listCust.Add(new SelectListItem
                                {
                                    Text = custGroup.CUSTOMERNAME,
                                    Value = custGroup.CUSTOMERNAME, Selected = true

                                });

                            }

                            else
                            {
                                listCust.Add(new SelectListItem
                                {
                                    Text = custGroup.CUSTOMERNAME,
                                    Value = custGroup.CUSTOMERNAME
                                });
                            }

                        }

                    }
                    <p class="form-control-static"> @Html.DropDownListFor(model => model.CUSTOMERGROUP, listCust, "-- Select Customer Group --", new { @readonly = "readonly" })</p>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">Freight Collect:</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.CheckBoxFor(model => model.EX_Factory) <span>:EX Factory</span></p>
                    <p class="form-control-static"> @Html.CheckBoxFor(model => model.FCA_FOB) <span>:FCA / FOB</span></p>
                </div>

            </div>


            <div class="form-group">
                <label class="col-lg-3 control-label">Freight Prepaid:</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.CheckBoxFor(model => model.DOOR_TO_DOOR) <span>:DOOR TO DOOR</span></p>
                    <p class="form-control-static"> @Html.CheckBoxFor(model => model.DOOR_TO_PORT_DESC) <span>:DOOR TO PORT DESC</span></p>
                    <p class="form-control-static"> @Html.CheckBoxFor(model => model.DAP) <span>:DAP</span></p>
                    <p class="form-control-static"> @Html.CheckBoxFor(model => model.DDP) <span>:DDP</span></p>
                </div>

            </div>


            <div class="form-group">
                <label class="col-lg-3 control-label">Bill To:</label>
                <div class="col-lg-8">

                   @{
                       if (Model.BILLTO != null)
                       {
                           if (Model.BILLTO.Contains("Bill to recipient"))
                           {
                            <p class="form-control-static">@Html.RadioButtonFor(model => model.BILLTO, "Bill to recipient", new { @checked = "checked" }) <span>:Bill to recipient</span></p>
                           }
                           else
                           {
                            <p class="form-control-static">@Html.RadioButtonFor(model => model.BILLTO, "Bill to recipient") <span>:Bill to recipient</span></p>
                           }

                           if (Model.BILLTO.Contains("Bill to 3rd Party"))
                           {
                            <p class="form-control-static">@Html.RadioButtonFor(model => model.BILLTO, "Bill to 3rd Party", new { @checked = "checked" }) <span>:Bill to recipient</span></p>
                           }
                           else
                           {
                            <p class="form-control-static"> @Html.RadioButtonFor(model => model.BILLTO, "Bill to 3rd Party") <span>:Bill to 3rd Party</span></p>
                           }

                           if (Model.BILLTO.Contains("Bill to Account"))
                           {
                            <p class="form-control-static">@Html.RadioButtonFor(model => model.BILLTO, "Bill to Account", new { @checked = "checked" }) <span>:Bill to recipient</span></p>
                           }

                           else
                           {
                            <p class="form-control-static"> @Html.RadioButtonFor(model => model.BILLTO, "Bill to Account") <span>:Bill to Account</span></p>
                           }

                       }
                       else
                       {
                            <p class="form-control-static">@Html.RadioButtonFor(model => model.BILLTO, "Bill to recipient") <span>:Bill to recipient</span></p>
                            <p class="form-control-static"> @Html.RadioButtonFor(model => model.BILLTO, "Bill to 3rd Party") <span>:Bill to 3rd Party</span></p>
                            <p class="form-control-static"> @Html.RadioButtonFor(model => model.BILLTO, "Bill to Account") <span>:Bill to Account</span></p>
                       }




                }
                 

                </div>

            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">Service Type:</label>
                <div class="col-lg-8">

                    @{
                        if (Model.SERVICETYPE != null)
                        {
                            if (Model.SERVICETYPE.Contains("Normal"))
                            {
                                <p class="form-control-static">@Html.RadioButtonFor(model => model.SERVICETYPE, "Normal", new { @checked = "checked" }) <span>:Normal</span></p>
                            }
                            else
                            {
                                <p class="form-control-static">@Html.RadioButtonFor(model => model.SERVICETYPE, "Normal") <span>:Normal</span></p>
                            }

                            if (Model.BILLTO.Contains("Express"))
                            {
                                <p class="form-control-static">@Html.RadioButtonFor(model => model.SERVICETYPE, "Express", new { @checked = "checked" }) <span>:Express</span></p>
                            }
                            else
                            {
                                <p class="form-control-static"> @Html.RadioButtonFor(model => model.SERVICETYPE, "Express") <span>:Express</span></p>
                            }

                        }
                        else
                        {
                            <p class="form-control-static">@Html.RadioButtonFor(model => model.SERVICETYPE, "Normal") <span>:Normal</span></p>
                            <p class="form-control-static"> @Html.RadioButtonFor(model => model.SERVICETYPE, "Express") <span>:Express</span></p>
                           
                        }




                    }


                </div>

            </div>


            <div class="form-group">
                <label class="col-lg-3 control-label">ADDRESS 1 :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.TextAreaFor(model => model.ADDRESS1, new { @class = "form-control"@*, @readonly = "readonly"*@ })</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">ADDRESS 2 :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.TextAreaFor(model => model.ADDRESS2, new { @class = "form-control"@*, @readonly = "readonly"*@ })</p>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">POSTCODE :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.TextBoxFor(model => model.POSTCODE, new { @class = "form-control"@*, @readonly = "readonly"*@ })</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">REGION :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.TextBoxFor(model => model.REGION, new { @class = "form-control"@*, @readonly = "readonly"*@ })</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">COUNTRY :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.TextBoxFor(model => model.COUNTRY, new { @class = "form-control"@*, @readonly = "readonly"*@ })</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">FORWARDER :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.TextBoxFor(model => model.FORWARDER, new { @class = "form-control" })</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">ACCOUNT NO :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.TextBoxFor(model => model.ACCOUNTNO, new { @class = "form-control" })</p>
                </div>
            </div>


            <div class="form-group">
                <label class="col-lg-3 control-label">ATTENTION NAME :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.TextBoxFor(model => model.ATTNNAME, new { @class = "form-control" })</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">ATTENTION CONTACT NO :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.TextBoxFor(model => model.ATTNCONTACTNO, new { @class = "form-control" })</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">STATUS :</label>
                <div class="col-lg-8">
                    <p class="form-control-static"> @Html.DropDownListFor(m => m.STATUS, new SelectList(Model.ListOfStatus, "Value", "Text"), new { @class = "form-control", @readonly = "readonly" })</p>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label"></label>
                <div class="col-lg-8">
                    <p class="form-control-static text-muted"></p>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label"></label>
                <div class="col-lg-8">
                    <input type="submit" class="btn btn-bordered btn-success w150" value="Update" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-bordered btn-dark w150" })
                </div>
            </div>

                        }
    </div>
    <!-- -------------- /Column Center -------------- -->
                        }
                        catch (Exception ex)
                        {
                            <script type="text/javascript">
                                alert('@ex.Message.Replace("'","\\'").Replace("\r\n","<br/>")' + '\n' + 'Session Timeout');
                                location.href = '/AutoRSN';
                                //alert('Session Timeout');
                            </script>
                        }

</section>